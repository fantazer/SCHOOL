input,textarea,select
	+below(768px)
		padding: 15px 10px
	padding 20px
	border 0
	resize: none
	outline: 0 !important
	border-radius 4px
	font-family $v-font
	display block!important
	placeholder(#888888)
	background: #f5f5f5
	tr(all)
	//&:focus
	//	border 1px solid blue

.style-label
	display flex
	position relative
	align-items center


.style-label--disable
	@extend .disabled

.check-el
	cp()
	input
		position absolute
		top 0
		left -9999px
	.sytle-input-element
		size 20px
		position relative
		display inline-block
		margin-right 10px
		background-color #f3f3f3
		br(3px)
		cp()
		tr(all)
		border 1px solid $border-color
		&:hover
			background-color white
	.icon-check
		display none
	.sytle-input
		&:checked + .sytle-input-element
			flex(mid)
			color white
			background-color white
			.icon-check
				display block
				fill #000000
				size 12px

.style-label--radio
	input
		position absolute
		top 0
		left -9999px
	.sytle-input-element
		width 20px
		height 20px
		position relative
		display inline-block
		margin-right 10px
		background #f5f5f6
		border 1px solid #cfcfcf
		round()
		cp()
	.icon-check
		display none
	.sytle-input
		&:checked + .sytle-input-element
			flex(mid)
			color white
			background: white
			border 1px solid yellow
			.icon-radio
				round()
				size 12px
				background yellow;
